<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_fragment_simple_note"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NotesFragment"
    android:background="@color/black">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes_recycler_view"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_add_simple_note"
        android:background="@android:color/transparent"
        android:layout_width="100dp"
        android:layout_height="105dp"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/btn_simple_note_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_btn_background"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="@string/notes_add_button" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>